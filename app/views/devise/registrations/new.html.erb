<div class="container">
  <h2 class="mt-3 mb-3">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="name-inputs">
        <%= f.input :first_name, required: true, input_html: { class: 'first-name', class: "form-input" } %>
        <div class="mb-3 string required user_last_name">
          <div class="last_name_label">
            <label class="form-label string required" for="user_last_name">Last name <abbr title="required">*</abbr></label>
          </div>
          <%= f.input :last_name, wrapper: false, label: false, required: true, input_html: { class: 'last-name', class: "form-input" } %>
        </div>
      </div>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-input" } %>
      <%= f.input :education_level, collection: %w(Secondary Undergraduate Masters MBA PhD),
                  input_html: {class: "form-select"} %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "form-input" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "form-input mb-5" } %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Sign up", class: "btn btn-primary"%>
    </div>

    <p>Already a member?</p>

  <% end %>
  <%= render "devise/shared/links" %>
</div>
